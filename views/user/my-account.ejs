<h1 class="mt-4">My Account - Update Details</h1>
<%- include('../includes/navbar.ejs') %>
</br>
<form action="/users/update-account" method="POST">
    <div class="form-group">
        <label for="name">Current Username: <%= userName %></label>
        <input type="name" id="name" name="name" class="form-control" placeholder="Enter New Username" value="<%= typeof name != 'undefined' ? name : '' %>" />
        <!-- value = if typeof name is not undefined, display name variable, else blank -->
    </div>
    <div class="form-group">
        <label for="password">Update Password</label>
        <input type="password" id="password" name="password" class="form-control" placeholder="Create Password" value="<%= typeof password != 'undefined' ? password : '' %>" />
    </div>
    <div class="form-group">
        <label for="password2">Confirm New Password</label>
        <input type="password" id="password2" name="password2" class="form-control" placeholder="Confirm Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
    </div>
    <div class="form-group">
        <label for="email">Current Email: <%= userEmail %></label>
        <input 
        type="email" 
        id="email" 
        name="email" 
        class="form-control" 
        placeholder="Enter Email" 
        alue="<%= typeof email != 'undefined' ? email : '' %>" />
    </div>
<!-- Choose email notifications for comments : select yes or no -->
    <div class="form-group">
        <div class="form-check">
            <label> Would you like to receive notifications via email of comments?</label>
        </br>
              <input type="radio" class="form-check-input" name="emailNotifications" id="optionsRadios1" value="true" checked="">
              <label>Yes</label>
            <!-- </label> -->
          </div>
          <div class="form-check">
          <!-- <label class="form-check-label"> -->
              <input type="radio" class="form-check-input" name="emailNotifications" id="optionsRadios2" value="false">
             <label>No </label> 
            <!-- </label> -->
          </div>
    </div>        

    <button type="submit" class="btn btn-primary btn-block">
        Update
    </button>
</form>
</br>


